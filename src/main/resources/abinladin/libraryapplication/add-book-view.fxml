<AnchorPane fx:id="addbooktab" prefHeight="550.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abinladin.libraryapplication.controllers.AddBookViewController">
   <children>
      <Button fx:id="submit" layoutX="256.0" layoutY="405.0" mnemonicParsing="false" onAction="#buttonAddBook" text="Submit" />
      <TextField fx:id="titleField" layoutX="214.0" layoutY="187.0" prefHeight="27.0" prefWidth="149.0" promptText="Title" />
      <TextField fx:id="authorField" layoutX="214.0" layoutY="212.0" prefHeight="27.0" prefWidth="149.0" promptText="Author" />
      <TextField fx:id="publisher" layoutX="214.0" layoutY="262.0" prefHeight="25.0" prefWidth="149.0" promptText="Publisher" />
      <DatePicker fx:id="publicationDate" layoutX="214.0" layoutY="237.0" prefHeight="25.0" prefWidth="149.0" promptText="Publication Date" />
      <TextField fx:id="edition" layoutX="214.0" layoutY="287.0" prefHeight="25.0" prefWidth="149.0" promptText="Edition" />
      <TextField fx:id="ISBN" layoutX="214.0" layoutY="312.0" prefHeight="25.0" prefWidth="149.0" promptText="ISBN" />
      <Text layoutX="200.0" layoutY="156.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add Book">
         <font>
            <Font size="37.0" />
         </font>
      </Text>
      <Button fx:id="printbook" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#printStoredBooks" text="Debug print book" />
      <ChoiceBox fx:id="format" layoutX="255.0" layoutY="337.0" onMouseClicked="#fillButtonFormat" prefHeight="24.0" prefWidth="109.0" />
      <Label layoutX="202.0" layoutY="336.0" prefHeight="27.0" prefWidth="53.0" text="Format" />
      <ChoiceBox fx:id="department" layoutX="255.0" layoutY="361.0" onMouseClicked="#fillButtonDepartment" prefHeight="24.0" prefWidth="109.0" />
      <Label layoutX="174.0" layoutY="360.0" prefHeight="27.0" prefWidth="81.0" text="Department" />
   </children>
</AnchorPane>

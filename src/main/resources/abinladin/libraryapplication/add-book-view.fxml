<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abinladin.libraryapplication.BookController">
   <children>
      <Button fx:id="submit" layoutX="218.0" layoutY="313.0" mnemonicParsing="false" onAction="#buttonAddBook" text="Submit" />
      <TextField fx:id="titleField" layoutX="176.0" layoutY="117.0" prefHeight="27.0" prefWidth="149.0" promptText="Title" />
      <TextField fx:id="authorField" layoutX="176.0" layoutY="142.0" prefHeight="27.0" prefWidth="149.0" promptText="Author" />
      <TextField fx:id="publisher" layoutX="176.0" layoutY="192.0" prefHeight="25.0" prefWidth="149.0" promptText="Publisher" />
      <DatePicker fx:id="publicationDate" layoutX="176.0" layoutY="167.0" prefHeight="25.0" prefWidth="149.0" promptText="Publication Date" />
      <TextField fx:id="edition" layoutX="176.0" layoutY="217.0" prefHeight="25.0" prefWidth="149.0" promptText="Edition" />
      <TextField fx:id="ISBN" layoutX="176.0" layoutY="242.0" prefHeight="25.0" prefWidth="149.0" promptText="ISBN" />
      <Text layoutX="172.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add Book">
         <font>
            <Font size="37.0" />
         </font>
      </Text>
      <Button fx:id="printbook" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#printStoredBooks" text="Debug print book" />
      <ChoiceBox fx:id="format" layoutX="176.0" layoutY="267.0" onMouseClicked="#fillButtonFormat" prefWidth="150.0" />
   </children>
</AnchorPane>

<AnchorPane fx:id="addbooktab" prefHeight="550.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abinladin.libraryapplication.controllers.AddBookViewController">
   <children>
      <Button fx:id="submit" layoutX="246.0" layoutY="333.0" mnemonicParsing="false" onAction="#buttonAddBook" text="Submit" />
      <TextField fx:id="titleField" layoutX="204.0" layoutY="115.0" prefHeight="27.0" prefWidth="149.0" promptText="Title" />
      <TextField fx:id="authorField" layoutX="204.0" layoutY="140.0" prefHeight="27.0" prefWidth="149.0" promptText="Author" />
      <TextField fx:id="publisher" layoutX="204.0" layoutY="190.0" prefHeight="25.0" prefWidth="149.0" promptText="Publisher" />
      <DatePicker fx:id="publicationDate" layoutX="204.0" layoutY="165.0" prefHeight="25.0" prefWidth="149.0" promptText="Publication Date" />
      <TextField fx:id="edition" layoutX="204.0" layoutY="215.0" prefHeight="25.0" prefWidth="149.0" promptText="Edition" />
      <TextField fx:id="ISBN" layoutX="204.0" layoutY="240.0" prefHeight="25.0" prefWidth="149.0" promptText="ISBN" />
      <Text layoutX="190.0" layoutY="84.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add Book">
         <font>
            <Font size="37.0" />
         </font>
      </Text>
      <Button fx:id="printbook" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#printStoredBooks" text="Debug print book" />
      <ChoiceBox fx:id="format" layoutX="245.0" layoutY="265.0" onMouseClicked="#fillButtonFormat" prefHeight="24.0" prefWidth="109.0" />
      <Label layoutX="192.0" layoutY="264.0" prefHeight="27.0" prefWidth="53.0" text="Format" />
      <ChoiceBox fx:id="department" layoutX="245.0" layoutY="289.0" onMouseClicked="#fillButtonDepartment" prefHeight="24.0" prefWidth="109.0" />
      <Label layoutX="164.0" layoutY="288.0" prefHeight="27.0" prefWidth="81.0" text="Department" />
   </children>
</AnchorPane>
